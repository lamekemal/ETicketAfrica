<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bktone">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="256dp"
        android:layout_height="155dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/eticket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="321dp"
        android:layout_height="309dp"
        android:layout_marginTop="84dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="25dp"
            android:gravity="center_horizontal"
            android:text="Commencez une validation"
            android:textAlignment="center"
            android:textSize="35dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="number"
            android:gravity="center"
            android:hint="Code validateur "
            android:textSize="20dp"
            android:id="@+id/mono"
            android:visibility="gone"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Demarrer"
            android:textSize="20dp"
            app:backgroundTint="@color/white"
            app:cornerRadius="16dp"
            app:rippleColor="@color/bborder"
            app:strokeColor="@color/bborder"
            android:id="@+id/duo"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>